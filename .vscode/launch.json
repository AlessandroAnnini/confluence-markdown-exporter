  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "justMyCode": false,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceRoot}"
      }
    },
    {
      "name": "Python: Export Page",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/confluence_to_markdown/main.py",
      "justMyCode": false,
      "args": ["page", "1013743763"],
      // "args": ["page", "944046108"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceRoot}"
      }
    }
  ]
}
